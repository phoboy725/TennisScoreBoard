<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Tennis Scoreboard</display-name>

    <!-- Конфигурация JSP сервлета (Jasper) -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>development</param-name>
            <param-value>false</param-value> <!-- отключает проверку изменений при каждом запросе -->
        </init-param>
        <init-param>
            <param-name>modificationTestInterval</param-name>
            <param-value>600</param-value> <!-- проверка каждую 10 минуту -->
        </init-param>
        <init-param>
            <param-name>enablePooling</param-name>
            <param-value>true</param-value> <!-- пуллинг тегов для производительности -->
        </init-param>
        <init-param>
            <param-name>trimSpaces</param-name>
            <param-value>single</param-value> <!-- оптимизация вывода -->
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>

</web-app>

